<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/received_message__image_message_profile"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:src="@drawable/ic_letter_j"
        app:civ_border_color="#00000000"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/received_message__text_message_name"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="John Doe"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/received_message__image_message_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/received_message__text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/received_message__image_message_profile"
        app:layout_constraintTop_toBottomOf="@+id/received_message__text_message_name" />

    <TextView
        android:id="@+id/received_message__text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="11:40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/received_message__text_message_body"
        app:layout_constraintLeft_toRightOf="@+id/received_message__text_message_body" />

</android.support.constraint.ConstraintLayout>