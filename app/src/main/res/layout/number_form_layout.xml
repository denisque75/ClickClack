<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/cellphone__password_verifying_layout"
    android:layout_margin="12dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cellphone__info_text_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/cellphone__first_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:nextFocusDown="@id/cellphone__second_char"
        android:text="@string/plus"
        android:maxLength="1"/>

    <EditText
        android:gravity="center"
        android:id="@+id/cellphone__second_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:nextFocusDown="@id/cellphone__third_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__third_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__fourth_char"
         android:maxLength="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="("/>

    <EditText
        android:id="@+id/cellphone__fourth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__fifth_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__fifth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__sixth_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__sixth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__seventh_char"
        android:maxLength="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=")"/>

    <EditText
        android:id="@+id/cellphone__seventh_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__eighth_char"
        android:maxLength="1"/>

    <EditText
        android:id="@+id/cellphone__eighth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__ninth_char"
        android:maxLength="1"/>

    <EditText
        android:id="@+id/cellphone__ninth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__tenth_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__tenth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__eleventh_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__eleventh_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__twelfth_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__twelfth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:nextFocusDown="@id/cellphone__thirteenth_char"
        android:maxLength="1"/>
    <EditText
        android:id="@+id/cellphone__thirteenth_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"/>

</LinearLayout>